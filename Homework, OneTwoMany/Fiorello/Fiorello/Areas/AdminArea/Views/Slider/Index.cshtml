@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-area="AdminArea"asp-controller="Slider"asp-action="Create" class="btn btn-success"><i class="mdi mdi-new-box"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
               
                    <th style="text-align:center">
                        Image
                    </th>
                    <th style="text-align:center">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                   
                        <td>
                            <img src="~/img/@item.Image" alt="Slider" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-info">  <i class="mdi mdi-help-circle"></i></button>
                            <button type="button" class="btn btn-primary">  <i class="mdi mdi-table"></i></button>
                            <button type="button" class="btn btn-danger">  <i class="mdi mdi-delete"></i></button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
