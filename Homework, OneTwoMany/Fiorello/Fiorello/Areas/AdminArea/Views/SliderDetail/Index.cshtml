@model SliderDetail


@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a  class="btn btn-success"><i class="mdi mdi-new-box"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align:center">
                        Detail
                    </th>
                    <th style="text-align:center">
                        Settings
                    </th>
                  
                </tr>
            </thead>
            <tbody>


                <tr>

              
                    <td>
                       @Html.Raw(Model.Header)
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">  <i class="mdi mdi-help-circle"></i></button>
                        <button type="button" class="btn btn-primary">  <i class="mdi mdi-table"></i></button>
                        <button type="button" class="btn btn-danger">  <i class="mdi mdi-delete"></i></button>
                    </td>
                </tr>
                <tr>

            
                    <td>
                        @Html.Raw(Model.Description)
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">  <i class="mdi mdi-help-circle"></i></button>
                        <button type="button" class="btn btn-primary">  <i class="mdi mdi-table"></i></button>
                        <button type="button" class="btn btn-danger">  <i class="mdi mdi-delete"></i></button>
                    </td>
                </tr>
                <tr>

                
                    <td>
                        <img src="~/img/@Model.Signature" alt="Signature" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">  <i class="mdi mdi-help-circle"></i></button>
                        <button type="button" class="btn btn-primary">  <i class="mdi mdi-table"></i></button>
                        <button type="button" class="btn btn-danger">  <i class="mdi mdi-delete"></i></button>
                    </td>
                </tr>


            </tbody>
        </table>
    </div>
</div>